generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
 
}

model Visit {
  id        String   @id @default(cuid())
  ip        String?
  path      String?
  device    String?
  browser   String?
  os        String?
  country   String?
  city      String?
  referer   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Lead {
  id        String   @id @default(uuid())
  name      String?
  email     String?
  whatsapp  String?  @db.Text
  project   String?  @db.Text
  createdAt DateTime @default(now())
}

